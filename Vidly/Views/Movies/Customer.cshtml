@model Vidly.ViewModels.CustomerViewModel

@{
                /**/

                ViewBag.Title = "Customer";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>


        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Customer</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var customer in Model.ListOfCustomers)
                    {              
                    <tr>
                        <td>@customer.Id</td>
                        <td><a href="">@customer.Name</a></td>
                    </tr>              
                    }
                }
            </tbody>
        </table>
    

